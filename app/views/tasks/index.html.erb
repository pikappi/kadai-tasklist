  <div class="row">
    <div class="col-sm-8">
      <h1>タスク一覧</h1>
      <% if @tasks.any? %>
       <ul>
        <% @tasks.each do |task| %>
        <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status %></li>
        <% end %>
       </ul>
      <%== pagy_bootstrap_nav(@pagy) %>
      <% end %>
      <%= link_to '新規タスクの投稿', new_task_path %>
    </div>
  </div>